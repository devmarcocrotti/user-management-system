{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-6">
        <div class="bg-white shadow-xl overflow-hidden rounded-b-xl p-6">
            {{ form_start(profileForm, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-6">
                {{ form_label(profileForm.username) }}
                {{ form_widget(profileForm.username) }}
                <div class="mt-1 text-sm text-red-500">
                    {{ form_errors(profileForm.username) }}
                </div>
            </div>
            <div class="mb-6">
                {{ form_label(profileForm.email) }}
                {{ form_widget(profileForm.email) }}
                <div class="mt-1 text-sm text-red-500">
                    {{ form_errors(profileForm.email) }}
                </div>
            </div>
            <button type="submit" class="text-white bg-neutral-500 hover:bg-primary-700 focus:ring-2 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Save</button>
            {{ form_end(profileForm) }}
        </div>
    </div>
{% endblock %}
